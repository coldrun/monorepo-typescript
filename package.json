{
  "name": "monorepo-typescript",
  "private": true,
  "author": "Coldrun <info@coldrun.com>",
  "homepage": "https://github.com/coldrun/monorepo-typescript",
  "type": "module",
  "packageManager": "pnpm@9.12.1",
  "engineStrict": true,
  "engines": {
    "node": ">=20",
    "pnpm": ">=9.12"
  },
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "build:docker": "pnpm -r --stream run build:docker",
    "clean": "rimraf --glob node_modules packages/*/node_modules packages/*/dist temp .eslintcache",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint --cache .",
    "lerna": "lerna",
    "ci:publish": "lerna publish",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@lerna-lite/cli": "^3.10.0",
    "@lerna-lite/publish": "^3.10.0",
    "@types/node": "^20.16.5",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^4.2.1",
    "execa": "^9.3.1",
    "globals": "^15.9.0",
    "just-pnpm": "^1.0.2",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.5.0",
    "yargs": "^17.7.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,cts,mts,tsx,vue}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "docker": {
    "registry": "ghcr.io/coldrun"
  }
}
